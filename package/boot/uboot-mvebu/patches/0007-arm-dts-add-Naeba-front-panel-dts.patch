+		#address-cells = <1>;
+		#size-cells = <0>;
+		reg = <0x68>;
+		D7B: D7B@1 {
+			label = "S7:blue";
+			reg = <1>;
+			led-max-microamp = <5000>;
+		};
+		D7G: D7G@1 {
