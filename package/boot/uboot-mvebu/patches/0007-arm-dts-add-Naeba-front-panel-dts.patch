+			reg = <3>;
+			led-max-microamp = <5000>;
+		};
+		D5B: D5B@1 {
+			label = "S2:blue";
+			reg = <4>;
+			led-max-microamp = <5000>;
+		};
+		D5G: D5G@1 {
+			label = "S2:green";
+			reg = <5>;
+			led-max-microamp = <5000>;
+		};
+		D5R: D5R@1 {
+			label = "S2:red";
+			reg = <6>;
+			led-max-microamp = <5000>;
+		};
