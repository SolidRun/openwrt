+&i2c0 {
+        pinctrl-0 = <&i2c0_pins>;
+        pinctrl-names = "default";
+        status = "okay";
+	ambilight: ambilight@39 {
+		compatible = "on,noa1305";
+		#address-cells = <1>;
+		#size-cells = <0>;
+		reg = <0x39>;
+	};
+	D1D2D3: leds@64 {
+		compatible = "issi,is31fl3199";
+		#address-cells = <1>;
+		#size-cells = <0>;
+		reg = <0x64>;
+		D1B: D1B@1 {
+			label = "S4:blue";
+			reg = <1>;
+			led-max-microamp = <5000>;
+		};
+		D1G: D1G@1 {
+			label = "S4:green";
+			reg = <2>;
+			led-max-microamp = <5000>;
+		};
