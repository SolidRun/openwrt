+			label = "S6:blue";
+			reg = <7>;
+			led-max-microamp = <5000>;
+		};
+		D3G: D3G@1 {
+			label = "S6:green";
+			reg = <8>;
+			led-max-microamp = <5000>;
+		};
+		D3R: D3R@1 {
+			label = "S6:red";
+			reg = <9>;
+			led-max-microamp = <5000>;
+		};
+	};
+	D4D5D6: leds@67 {
+		compatible = "issi,is31fl3199";
+		#address-cells = <1>;
+		#size-cells = <0>;
+		reg = <0x67>;
+		control-mode = <0x0>; /* Master */
+		D6B: D6B@1 {
+			label = "S3:blue";
+			reg = <1>;
+			led-max-microamp = <5000>;
+		};
+		D6G: D6G@1 {
+			label = "S3:green";
+			reg = <2>;
