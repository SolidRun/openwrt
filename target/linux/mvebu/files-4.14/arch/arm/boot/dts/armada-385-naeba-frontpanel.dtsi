&i2c0 {
        pinctrl-0 = <&i2c0_pins>;
        pinctrl-names = "default";
        status = "okay";
	ambilight: ambilight@39 {
		compatible = "on,noa1305";
		#address-cells = <1>;
		#size-cells = <0>;
		reg = <0x39>;
	};
	D1D2D3: leds@64 {
		compatible = "issi,is31fl3199";
		#address-cells = <1>;
		#size-cells = <0>;
		reg = <0x64>;
		D1B: D1B@1 {
			label = "S4:blue";
			reg = <1>;
			led-max-microamp = <5000>;
		};
		D1G: D1G@1 {
			label = "S4:green";
			reg = <2>;
			led-max-microamp = <5000>;
		};
		D1R: D1R@1 {
			label = "S4:red";
			reg = <3>;
			led-max-microamp = <5000>;
		};
		D2B: D2B@1 {
			label = "S5:blue";
			reg = <4>;
			led-max-microamp = <5000>;
		};
		D2G: D2G@1 {
			label = "S5:green";
			reg = <5>;
			led-max-microamp = <5000>;
		};
		D2R: D2R@1 {
			label = "S5:red";
			reg = <6>;
			led-max-microamp = <5000>;
		};
		D3B: D3B@1 {
			label = "S6:blue";
			reg = <7>;
			led-max-microamp = <5000>;
		};
		D3G: D3G@1 {
			label = "S6:green";
			reg = <8>;
			led-max-microamp = <5000>;
		};
		D3R: D3R@1 {
			label = "S6:red";
			reg = <9>;
			led-max-microamp = <5000>;
		};
	};
	D4D5D6: leds@67 {
		compatible = "issi,is31fl3199";
		#address-cells = <1>;
		#size-cells = <0>;
		reg = <0x67>;
		control-mode = <0x0>; /* Master */
		D6B: D6B@1 {
			label = "S3:blue";
			reg = <1>;
			led-max-microamp = <5000>;
		};
		D6G: D6G@1 {
			label = "S3:green";
			reg = <2>;
			led-max-microamp = <5000>;
		};
		D6R: D6R@1 {
			label = "S3:red";
			reg = <3>;
			led-max-microamp = <5000>;
		};
		D5B: D5B@1 {
			label = "S2:blue";
			reg = <4>;
			led-max-microamp = <5000>;
		};
		D5G: D5G@1 {
			label = "S2:green";
			reg = <5>;
			led-max-microamp = <5000>;
		};
		D5R: D5R@1 {
			label = "S2:red";
			reg = <6>;
			led-max-microamp = <5000>;
		};
		D4B: D4B@1 {
			label = "S1:blue";
			reg = <7>;
			led-max-microamp = <5000>;
		};
		D4G: D4G@1 {
			label = "S1:green";
			reg = <8>;
			led-max-microamp = <5000>;
		};
		D4R: D4R@1 {
			label = "S1:red";
			reg = <9>;
			led-max-microamp = <5000>;
		};
	};
	D7: leds@65 {
		compatible = "issi,is31fl3196";
		#address-cells = <1>;
		#size-cells = <0>;
		reg = <0x65>;
		control-mode = <0x0>; /* Master */
		D7B: D7B@1 {
			label = "S7:blue";
			reg = <1>;
			led-max-microamp = <5000>;
		};
		D7G: D7G@1 {
			label = "S7:green";
			reg = <2>;
			led-max-microamp = <5000>;
		};
		D7R: D7R@1 {
			label = "S7:red";
			reg = <3>;
			led-max-microamp = <5000>;
		};
		WL24: WL24@1 {
			label = "wlan24";
			reg = <4>;
			led-max-microamp = <5000>;
		};
		WL5: WL5@1 {
			label = "wlan5";
			reg = <5>;
			led-max-microamp = <5000>;
		};
		WWAN: WWAN@1 {
			label = "wwan";
			reg = <6>;
			led-max-microamp = <5000>;
		};
	};
	/* U1 temperature sensor on front panel */
	temp3: nct75@4e {
		compatible = "lm75";
		reg = <0x4e>;
	};
	/* U2 temperature sensor on v6logo */
	temp4: nct75@4f {
		compatible = "lm75";
		reg = <0x4f>;
	};
	/* 2Kb eeprom on front panel */
	eeprom@51 {
		compatible = "atmel,24c02";
		reg = <0x51>;
	};
	/* 2Kb eeprom on v6logo */
	eeprom@52 {
		compatible = "atmel,24c02";
		reg = <0x52>;
	};
	pn547: pn547@28 {
		compatible = "nxp,pn547";
		reg = <0x28>;
                interrupt-gpios = <&gpio1 13 GPIO_ACTIVE_LOW>;
                enable-gpios = <&gpio1 10 GPIO_ACTIVE_HIGH>;
        };
};
